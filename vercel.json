{
  "buildCommand": "pnpm run build:vercel",
  "installCommand": "pnpm install --frozen-lockfile",
  "crons": [
    {
      "path": "/api/cron/release-holds",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/process-payouts",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/escalate-disputes",
      "schedule": "0 0 * * *"
    }
  ],
  "env": [
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_API_URL",
    "DATABASE_URL",
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "TSARA_BASE_URL",
    "TSARA_SECRET_KEY",
    "TSARA_PUBLIC_KEY",
    "DOJAH_APP_ID",
    "DOJAH_SECRET_KEY",
    "RESEND_API_KEY",
    "SMTP_FROM",
    "CRON_SECRET"
  ]
}