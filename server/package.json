  "scripts": {
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev": "concurrently -n NEXT,SERVER,DB -c cyan,green,magenta \"npm run dev:next\" \"npm run dev:server\" \"npx ts-node server/check-db.ts\"",
    "dev:next": "next dev",
    "dev:server": "ts-node server/index.ts",
    "db:generate": "drizzle-kit generate:pg",
    "build": "pnpm run build:server && next build",
    "build:server": "tsc -p server/tsconfig.json",
    "start:server": "node dist/server/index.js",
    "start": "next start",
    "lint": "next lint",
    "swagger:server": "ts-node server/openapi/server.ts",
    "generate:openapi": "ts-node openapi/generate-doc.ts",
    "serve:docs": "ts-node openapi/server.ts"
