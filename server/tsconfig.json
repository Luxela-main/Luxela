{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "outDir": "dist",
    "rootDir": "./",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "noImplicitAny": false,
    "isolatedModules": true,
    "allowJs": true,
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "next-env.d.ts", "**/*.ts", "**/*.tsx", "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "tests"
  ],
  "ts-node": {
    "require": ["dotenv/config"],
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}